def sum(num1,num2):
    return num1+num2

def sub(num1,num2):
    return num1-num2

def mult(num1,num2):
    return num1*num2

def div(num1,num2):
    return num1/num2
def menu():
    print("1-Summation")
    print("2-Substraction")
    print("3-Multiplication")
    print("4-Division")

print("Welcome to my simple calculator :)")
print("Please enter your number")
a=int(input("Enter your first number:"))
b=int(input("Enter your second number:"))
menu()
d=int(input("Please choose what you want:"))
if d==1:
    print("Your summation result is:",sum(a,b))
elif d==2:
    print("Your substraction result is:", sub(a, b))
elif d==3:
    print("Your multiplication result is:", mult(a, b))
elif d==4:
    print("Your division result is:", div(a, b))
else:
    print("Invalid choice.Please Check it!!")
